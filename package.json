{
  "author": {
    "name": "Bi-Programmer"
  },
  "name": "crm-desktop",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "rm -rf dist-electron && tsc -b --force src/electron/tsconfig.json && npm run copy:sql && npm run copy:session && npm run copy:browsers && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc -p src/electron/tsconfig.json",
    "install-browsers": "playwright install chromium",
    "copy:browsers": "xcopy \"%LOCALAPPDATA%\\ms-playwright\\chromium-1187\\chrome-win\" \"dist-electron\\chromium\\chrome-win\" /E /I /H /Y",
    "dist:publish:win": "npm run transpile:electron && npm run build && npm run copy:sql && npm run copy:session && npm run copy:browsers && electron-builder --win --x64 --publish always",
    "copy:sql": "cp-cli \"src/electron/sql\" dist-electron/sql --recursive --glob \"**/*\"",
    "copy:session": "cp-cli \"src/electron/session\" dist-electron/session --recursive --glob \"**/*\"",
    "postinstall": ""
  },
  "dependencies": {
    "axios": "^1.11.0",
    "electron-updater": "^6.6.2",
    "firebase": "^12.1.0",
    "firebase-admin": "^13.4.0",
    "flatpickr": "^4.6.13",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.540.0",
    "npm-run-all": "^4.1.5",
    "playwright-core": "^1.55.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-select": "^5.10.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/flatpickr": "^3.0.2",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "copyfiles": "^2.4.1",
    "cp-cli": "^2.0.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
